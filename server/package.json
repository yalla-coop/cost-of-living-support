{
  "name": "hyde-universal-credit-support-server",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"cd client && npm start\" \"cross-env DEBUG=server nodemon --exec babel-node ./server/index.js\"",
    "dev:server": "cross-env DEBUG=server nodemon --exec babel-node ./server/index.js",
    "dev:client": "cd client && npm start",
    "storybook": "cd client/ && npm run storybook",
    "start": "cross-env DEBUG=server node dist/index.js",
    "build:server": "cross-env DEBUG=server babel server --out-dir dist",
    "build": "npm run clean && npm run build:server",
    "migrate:up": "db-migrate -m server/database/migrations up",
    "migrate:down": "db-migrate -m server/database/migrations down",
    "migrate:create": "func() { db-migrate -m server/database/migrations create \"$1\" --sql-file; }; func",
    "clean": "rm -rf dist && mkdir dist",
    "lint:server": "eslint server",
    "test": "jest --silent=false",
    "cover": "nyc npm t",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build:db": "babel-node ./server/database/build.script.js",
    "build:db:prod": "babel-node ./server/database/dummy-data-prod/build.script.js",
    "init:both": "npm i && cd client && npm i && npm run build",
    "heroku-postbuild": "npm run init:both && npm run build"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.3",
    "@sendgrid/mail": "^7.4.6",
    "@sentry/node": "^6.11.0",
    "@sentry/tracing": "^6.11.0",
    "aws-sdk": "^2.971.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "debug": "^4.3.2",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "serve-favicon": "^2.5.0",
    "uniqid": "^5.3.0",
    "uuid": "^8.3.2",
    "yup": "^0.28.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-loader": "8.1.0",
    "chai": "^4.3.4",
    "concurrently": "^6.2.1",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^29.3.0",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.0.4",
    "ts-jest": "^29.0.3"
  },
  "nodemonConfig": {
    "watch": [
      "./server",
      "./package.json",
      "./client/src/constants"
    ]
  },
  "author": "",
  "license": "ISC"
}
