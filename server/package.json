{
  "name": "shannon-trust",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "dev": "cross-env DEBUG=server nodemon -L --exec babel-node src/index.js",
    "old-dev": "concurrently --kill-others-on-fail \"cd client && npm start\" \"cross-env DEBUG=server nodemon --exec babel-node ./server/index.js\"",
    "dev:server": "cross-env DEBUG=server nodemon --exec babel-node ./server/index.js",
    "dev:client": "cd client && npm start",
    "storybook": "cd client/ && npm run storybook",
    "start": "cross-env DEBUG=server node dist/index.js",
    "build:server": "DEBUG=server babel src --out-dir dist",
    "build": "npm run clean && npm run build:server",
    "migrate:up": "db-migrate -m src/database/migrations up",
    "migrate:down": "db-migrate -m src/database/migrations down",
    "migrate:create": "func() { db-migrate -m src/database/migrations create \"$1\" --sql-file; }; func",
    "clean": "rm -rf dist && mkdir dist",
    "lint:server": "eslint src --fix",
    "test": "cross-env NODE_ENV=test mocha \"src/**/*.spec.js\" --exclude \"server/services/dataTestingRunner/*.spec.js\"",
    "test:client": "cd client && npm test",
    "jest": "jest --forceExit",
    "cover": "nyc --reporter=lcov --reporter=text npm t",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build:db": "babel-node ./src/database/build.script.js",
    "build:db:prod": "babel-node ./src/database/dummy-data-prod/build.script.js",
    "load-local-files": "babel-node ./src/services/files-storage/upload-local-files/index.js",
    "find-missing-files": "babel-node ./src/services/files-storage/find-missing-media-files.js",
    "init:both": "npm i && cd client && npm i && npm run build",
    "heroku-postbuild": "npm run init:both && npm run build",
    "build:dummy:files": "babel-node server/database/dummy-data/generatedummyfiles.js",
    "prepare": "cd .. && husky install"
  },
  "dependencies": {
    "@babel/register": "^7.17.7",
    "@hapi/boom": "^10.0.0",
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.17.4",
    "@sentry/tracing": "^7.17.4",
    "aws-sdk": "^2.971.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "db-migrate-plugin-babel": "^2.0.1",
    "debug": "^4.3.2",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jest": "^28.1.3",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "pg": "^8.7.1",
    "pg-query-stream": "^4.2.4",
    "rate-limiter-flexible": "^2.3.12",
    "serve-favicon": "^2.5.0",
    "uniqid": "^5.3.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.19.4",
    "babel-loader": "8.1.0",
    "chai": "^4.3.4",
    "concurrently": "^6.2.1",
    "cspell": "^5.20.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "prettier": "^2.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ]
  }
}
